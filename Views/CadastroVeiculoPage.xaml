<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frotas.Views.CadastroVeiculoPage"
             Title="CadastroVeiculoPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="modeloEntry" Placeholder="Modelo" />
            <Entry x:Name="marcaEntry" Placeholder="Marca" />
            <Entry x:Name="anoEntry" Placeholder="Ano" Keyboard="Numeric" />
            <Entry x:Name="placaEntry" Placeholder="Placa" />
            <Entry x:Name="kmEntry" Placeholder="Km Atual" Keyboard="Numeric" />

            <Button Text="Salvar" Clicked="OnSalvarClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>